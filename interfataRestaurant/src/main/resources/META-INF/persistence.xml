<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_1.xsd"
             version="3.1">

    <persistence-unit name="RestaurantPU" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <!-- Clasele tale de entități -->
        <class>org.example.interfatarestaurant.model.Produs</class>
        <class>org.example.interfatarestaurant.model.Mancare</class>
        <class>org.example.interfatarestaurant.model.Bautura</class>
        <class>org.example.interfatarestaurant.model.User</class>
        <class>org.example.interfatarestaurant.model.OrderItem</class>
        <class>org.example.interfatarestaurant.model.RestaurantTable</class>
        <class>org.example.interfatarestaurant.model.Order</class>

        <properties>
            <!-- PostgreSQL Connection -->
            <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/restaurant_db"/>
            <property name="jakarta.persistence.jdbc.user" value="postgres"/>
            <property name="jakarta.persistence.jdbc.password" value="1q2w3e"/>

            <!-- Hibernate Configuration -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
        </properties>
    </persistence-unit>

</persistence>